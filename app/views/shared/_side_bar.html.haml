.chat-side
  .chat-side__user
    .chat-side__user__top-items
      %h3.chat-side__user__top-items__name
        = current_user.name
      %ul.chat-side__user__top-items__icons
        %li
          = link_to new_group_path do
            = icon('fas', 'edit', class: 'icon')
        %li
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog', class: 'icon')
  .chat-side__group-list
    - current_user.groups.each do |group|
      .chat-side__group-list__group
        = link_to group_messages_path(group) do
          .chat-side__group-list__group__group-name
            = group.name
          .chat-side__group-list__group__latest-message
            = group.show_last_message